package com.dezza.ricepaper.ui.scrollbar
{
	/**
	 * @author dezza
	 */
	public class ScrollBarButtonAlignment
	{
		/**
		 * btns are positioned at either end of the scroll bar
		 */
		public static const SPLIT : String = "split";

		/**
		 * btns are both at upper (or left) end of scroll bar
		 */
		public static const BOTH_UP : String = "both_up";

		/**
		 * btns are both at lower (or right) end of scroll bar
		 */
		public static const BOTH_DOWN : String = "both_down";

		/**
		 * btns should not be repositioned
		 */
		public static const FIXED : String = "fixed";
	}
}
