package com.dezza.ricepaper.ui.button
{
	/**
	 * @author derek
	 * 
	 * constants for button states 
	 * 
	 * button assets should use these values as frame labels for a particular state
	 */
	public class ButtonState
	{
		public static const ON : String = "on";

		public static const OFF : String = "off";

		public static const ON_SELECTED : String = "onSelected";

		public static const OFF_SELECTED : String = "offSelected";

		public static const ON_DISABLED : String = "onDisabled";

		public static const OFF_DISABLED : String = "offDisabled";
	}
}
